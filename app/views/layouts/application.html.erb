<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title><%= @title %><%= BillIt::Application.config.application_name %></title>
    <meta name="description" content="<%= ENV['description'] %>">
    <meta name="keywords" content="<%= ENV['keywords'] %>">
    
    <meta name="og:image" content="<%= asset_path('assets/billit-facebook.png') %>">
    <meta name="og:title" content="<%= @title %><%= BillIt::Application.config.application_name %>">
    <meta name="og:description" content="<%= ENV['og_description'] %>">

    <!-- Mobile viewport optimized: h5bp.com/viewport -->
    <meta name="viewport" content="width=device-width">

    <%= stylesheet_link_tag 'application' %>
    <%= stylesheet_link_tag "http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" %>
    <%= stylesheet_link_tag "http://cdnjs.cloudflare.com/ajax/libs/chosen/1.0/chosen.min.css" %>
    <%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
    <%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Lato' %>

    <%= favicon_link_tag '/assets/favicon.ico' %>

    <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if offline -->
    <script>window.jQuery || document.write('<script src="http://code.jquery.com/jquery-1.11.0.min.js" type="text/javascript"><\/script>')</script>

    <!-- scripts concatenated and minified via build script -->
    <%= javascript_include_tag 'application.js', :async => true %>
    <%= javascript_include_tag 'http://cdnjs.cloudflare.com/ajax/libs/chosen/1.1.0/chosen.jquery.min.js', :async => true %>
    <!-- end scripts -->

    <style type="text/css">
      html {
        position: relative;
        min-height: 100%;
      }
    </style>

    <%= csrf_meta_tag %>
</head>
<body>

  <!--[if lt IE 7]><p class="chromeframe">Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p><![endif]-->
  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="text-bar"><%= t('layout.menu') %></span>
        </button>
        <div id='site-logo'>
          <a href="<%=root_path%>"><%= image_tag "logo-congresoabierto.png", alt:t('layout.title_project') %></a>
          <div id="defci"><%= t('layout.from') %> <span id="beta">BETA</span></div>
        </div>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to t('layout.bills'), bills_path %><li/>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>
  
  <% if @condition_bill_header %>
  <!-- Show bill resume -->
  <%= render :partial => "bill_header"%>
  <% end %>

  <div class="container">

    <div class="row">
      <div class="col-md-12">
        <% flash.each do |name, msg| %>
          <div class="alert alert-info">
          <button type="button" class="close" aria-hidden="true" data-dismiss="alert">&times;</button>
            <%= content_tag :div, msg, :id => "flash_#{name}" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Content -->
    <%= yield %>
    <!-- End content -->

  </div> <!-- /container -->
  
  <div class="arregloFotter"></div>

  <!-- Footer -->
  <div id="footer">
    <div class="container">
      <div class="row">
        <div class="col-md-4">
            <ul>
                <li><a href="https://github.com/ciudadanointeligente/bill-it" target="_blank"><i class="fa fa-github-alt"></i> Revisa nuestro código en Github</a></li>
            </ul>
        </div>
        <div class="col-md-4">
          <ul>
            <li>
              Desarrollado por <a href="http://www.ciudadanointeligente.org/" target="_blank"><img src="<%= image_path('logo-ciudadanoi.png') %>" alt="Fundación Ciudadano Inteligente" title="Fundación Ciudadano Inteligente"></a>
            </li>
          </ul>
        </div>
        <div class="col-md-4">
            <ul>
                <li><a href="tel:+56224192770"><i class="fa fa-phone"></i> +562 2 419 2770</a></li>
                <li><a href="" class="email-contacto" target="_top"><i class="fa fa-envelope-o"></i> Contacto</a></li>
                <li><a href="http://bit.ly/17qiMkf" target="_blank"><i class="fa fa-map-marker"></i> Holanda 895, Providencia, Santiago, Chile</a></li>
            </ul>
        </div>
      </div>
    </div>
  </div>
  <!-- End footer -->

  <!-- Google Analytics -->
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', '<%= ENV['analytics'] %>');  // Replace with your property ID.
    ga('send', 'pageview');

    $(document).ready(function(){
      var pref = 'mailto:lab',
          suf = 'ciudadanointeligente.org',
          subject = '?Subject=i%20wanna%20bill-it';
      $('a.email-contacto').attr('href', pref+'@'+suf+subject);
    })
  </script>
  <!-- End Google Analytics -->
</body>
</html>
